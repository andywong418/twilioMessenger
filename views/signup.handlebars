
<form class="login-register-form" action="/signup" method="post">
  <h1 class="login-register-title">Signup</h1>
  <div class="col-10">
    <input class="form-control login-register-input" type="text" name="username" id="username-input-login">
  </div>
  <div class="col-10">
    <input class="form-control login-register-input" type="text" name="password" id="password-input-login">
  </div>
  <div class="col-10">
    <input class="form-control login-register-input" type="submit" name="submit" id="register-register" value="Register">
  </div>
</form>
